@model AddCardRequest
@{
}
<div class="modal fade" id="addCard">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addCardLabel">Add new Card</h4>
                <button type="button" class="btn-close" data-dismiss="modal">
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateCard" id="createCard">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" type="text" class="form-control" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" type="text" class="form-control" required />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>

